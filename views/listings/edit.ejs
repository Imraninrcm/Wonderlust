<% layout("/layouts/boilerplate") %>

<div
  class="row justify-content-center align-items-center"
  style="min-height: 80vh"
>
  <div class="col-md-8">
    <div class="card shadow-lg p-4" style="border-radius: 1.5rem">
      <h2 class="text-center mb-4" style="color: #1d8cb8; font-weight: bold">
        Edit Your Listing
      </h2>
      <form
        action="/listings/<%= list._id %>?_method=PUT"
        method="post"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title:</label>
          <input
            type="text"
            name="listing[title]"
            value="<%= list.title %>"
            required
            id="title"
            class="form-control"
            placeholder="e.g. Cozy Mountain Retreat"
          />
          <div class="invalid-feedback">Please enter a valid title.</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description:</label>
          <textarea
            class="form-control"
            name="listing[description]"
            required
            rows="3"
            placeholder="Share what makes this place special!"
          >
<%= list.description %></textarea
          >
          <div class="invalid-feedback">Please enter a short description.</div>
        </div>
        <div class="mb-3">
          <label class="form-label">Current Listing Image:</label>
          <img
            src="<%= list.image.url %>"
            alt="Current Listing Image"
            class="img-fluid"
            style="max-height: 200px"
          />
        </div>
        <div class="mb-3">
          <label for="image" class="form-label"
            >Upload New Image (Optional):</label
          >
          <input
            type="file"
            name="listing[image]"
            class="form-control"
            accept="image/*"
          />
          <div class="invalid-feedback">Please upload a valid image.</div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-6">
            <label for="price" class="form-label">Price per Night:</label>
            <input
              type="number"
              value="<%= list.price %>"
              name="listing[price]"
              class="form-control"
              required
              min="100"
              placeholder="e.g. 150"
            />
            <div class="invalid-feedback">Price should be at least 100.</div>
          </div>
          <div class="mb-3 col-md-6">
            <label for="country" class="form-label">Country:</label>
            <input
              type="text"
              name="listing[country]"
              value="<%= list.country %>"
              class="form-control"
              required
              placeholder="e.g. India"
            />
            <div class="invalid-feedback">
              Please enter a valid country name.
            </div>
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Location/City:</label>
          <input
            type="text"
            name="listing[location]"
            value="<%= list.location %>"
            class="form-control"
            required
            placeholder="e.g. Manali"
          />
          <div class="invalid-feedback">Please provide a valid location.</div>
        </div>
        <div class="mb-3 d-flex justify-content-between">
          <button
            type="submit"
            title="Save"
            class="btn btn-success px-4"
            style="font-weight: 500"
          >
            <i class="fas fa-save"></i> Save Changes
          </button>
          <a href="/listings/<%= list._id %>" class="btn btn-outline-danger">
            <i class="fas fa-times"></i> Cancel
          </a>
        </div>
      </form>
    </div>
  </div>
</div>
