<% layout("/layouts/boilerplate") %>
<body>
  <h3>Create a new listings</h3>
  <div class="row">
    <div class="col-8 offset-2">
      <form
        action="/listings"
        method="post"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label"> Title:</label>
          <input
            type="text"
            name="listing[title]"
            required
            id="title"
            class="form-control"
            placeholder="Add a Catchy title"
          />
          <div class="invalid-feedback">Please enter a valid title.</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Decription:</label>
          <textarea
            class="form-control"
            name="listing[description]"
            required
            placeholder="Describe in few word about the place"
          ></textarea>
          <div class="invalid-feedback">Please enter a short description</div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Upload Listing Image:</label>
          <input
            type="file"
            name="listing[image]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please upload a valid Image</div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-6">
            <label for="price" class="form-label"> Price:</label>
            <input
              type="number"
              name="listing[price]"
              class="form-control"
              required
              placeholder="Enter the price/night"
              min="100"
            />
            <div class="invalid-feedback">Price should be &ge; 100.</div>
          </div>
          <div class="mb-3 col-md-6">
            <label for="country" class="form-label"> Country name:</label>
            <input
              type="text"
              name="listing[country]"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter valid country name.</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label"> Loaction:</label>
          <input
            type="text"
            name="listing[location]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please provide a valid location.</div>
        </div>
        <div class="mb-3">
          <button type="submit" class="btn btn-outline-success">Add</button>
        </div>
      </form>
    </div>
  </div>
</body>
