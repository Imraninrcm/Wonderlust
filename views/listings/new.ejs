<% layout("/layouts/boilerplate") %>
<body>
  <div
    class="row justify-content-center align-items-center"
    style="min-height: 80vh"
  >
    <div class="col-md-8">
      <div class="card shadow-lg p-4" style="border-radius: 1.5rem">
        <h2 class="text-center mb-4" style="color: #1d8cb8; font-weight: bold">
          Create a New Listing
        </h2>
        <form
          action="/listings"
          method="post"
          novalidate
          class="needs-validation"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input
              type="text"
              name="listing[title]"
              required
              id="title"
              class="form-control"
              placeholder="e.g. Cozy Mountain Retreat, Urban Loft, Beachside Bungalow"
            />
            <div class="invalid-feedback">Please enter a catchy title.</div>
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea
              class="form-control"
              name="listing[description]"
              required
              placeholder="Share what makes this place special! (e.g. 'Wake up to breathtaking mountain views and fresh air...')"
              rows="3"
            ></textarea>
            <div class="invalid-feedback">
              Please enter a short description.
            </div>
          </div>
          <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image:</label>
            <input
              type="file"
              name="listing[image]"
              class="form-control"
              required
              accept="image/*"
            />
            <div class="invalid-feedback">
              Please upload a beautiful image of your place.
            </div>
          </div>
          <div class="row">
            <div class="mb-3 col-md-6">
              <label for="price" class="form-label">Price per Night:</label>
              <input
                type="number"
                name="listing[price]"
                class="form-control"
                required
                placeholder="e.g. 150"
                min="100"
              />
              <div class="invalid-feedback">Price should be at least 100.</div>
            </div>
            <div class="mb-3 col-md-6">
              <label for="country" class="form-label">Country:</label>
              <input
                type="text"
                name="listing[country]"
                class="form-control"
                required
                placeholder="e.g. India, France, Australia"
              />
              <div class="invalid-feedback">
                Please enter a valid country name.
              </div>
            </div>
          </div>
          <div class="mb-3">
            <label for="location" class="form-label">Location/City:</label>
            <input
              type="text"
              name="listing[location]"
              class="form-control"
              required
              placeholder="e.g. Manali, Paris, Sydney"
            />
            <div class="invalid-feedback">Please provide a valid location.</div>
          </div>
          <div class="mb-3 text-center">
            <button
              type="submit"
              class="btn btn-success px-5"
              style="font-weight: 500"
            >
              <i class="fa-solid fa-plus"></i> Add Listing
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
