<% layout("/layouts/boilerplate") %>

<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <div class="col"><h3><%= list.title %></h3></div>
      <div class="card col- offset-1" style="padding-left: 0; padding-right: 0">
        <img
          src="<%= list.image.url %>"
          class="card-img-top show-img"
          alt="listing-image"
        />
        <div class="card-body">
          <p class="card-text">Owned by <i><%= list.owner.username %></i></p>
          <p class="card-text"><b>Description:</b> <%= list.description %></p>
          <p class="card-text">
            <b>Price:</b> &#8377;<%= list.price.toLocaleString("en-IN") %>
          </p>
          <p class="card-text"><b>City:</b><%= list.location %></p>
          <p class="card-text"><b>Country:</b><%= list.country %></p>
        </div>
      </div>
    </div>
    <% if(currUser && currUser._id.equals(list.owner._id)){ %>
    <div class="btns col-8 offset-2">
      <a
        href="/listings/<%= list._id %>/edit"
        class="btn btn-info col-1 offset-3"
      >
        Edit
      </a>
      <form
        action="/listings/<%= list._id %>?_method=DELETE"
        method="post"
        class="col-1 offset-5"
      >
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
    </div>
    <% } %>
    <hr />
    <% if(currUser){%>
    <div class="col-8 offset-2">
      <h4>Leave a review</h4>
      <form
        action="/listings/<%= list._id %>/reviews"
        method="post"
        novalidate
        class="needs-validation"
      >
        <div class="col">
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="1"
              checked
              aria-label="No rating."
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <div class="col">
          <label for="comment" class="form-label">Comment:</label>
          <textarea
            name="review[comment]"
            id="comment"
            cols="30"
            rows="5"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Add you point of review</div>
        </div>
        <div class="btns col-8 offset-2">
          <button type="submit" class="btn btn-outline-secondary">
            Submit
          </button>
        </div>
      </form>
      <hr />
    </div>
    <%} %>
  </div>
  <% if(list.reviews.length >0){ %>
  <div class="row">
    <p><b>All Reviews:</b></p>
    <% for(rv of list.reviews){ %>
    <div class="card col-5 ms-3 mb-3">
      <div class="card-body">
        <h5 class="card-title">@<%= rv.author.username %></h5>
        <p class="starability-result" data-rating="<%= rv.rating%>"></p>
        <p class="card-text"><%= rv.comment%></p>
        <div class="card-footer text-body-secondary">
          <small class="text-body-secondary"
            >Added On <%= rv.createdAt.toLocaleDateString("en-IN") %></small
          >
        </div>
      </div>
      <% if(currUser && currUser._id.equals(rv.author._id)){ %>
      <form
        class="mb-3"
        action="/listings/<%= list._id %>/reviews/<%= rv._id %>?_method=DELETE"
        method="post"
      >
        <button type="submit" class="btn btn-sm btn-dark">Delete</button>
      </form>
      <% } %>
    </div>
    <% } %>
  </div>
  <% } %>
</body>
