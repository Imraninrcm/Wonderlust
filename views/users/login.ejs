<% layout("/layouts/boilerplate") %>
<body>
  <h1 class="col-6 offset-3">LogIn</h1>
  <div class="row">
    <div class="col-6 offset-3">
      <form action="/login" method="post">
        <div class="mb-3">
          <label for="username" class="form-label"> Name:</label>
          <input
            type="text"
            name="username"
            required
            id="username"
            class="form-control"
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label"> Password:</label>
          <input
            type="password"
            name="password"
            required
            id="password"
            class="form-control"
          />
        </div>
        <button class="btn btn-outline-success">Sign In</button>
      </form>
      <div class="col-6 offset-3">
        Don't have an Account &nbsp;
        <a class="btn btn-outline-secondary btn-sm" href="/signup"
          >Create Now</a
        >
      </div>
    </div>
  </div>
</body>
